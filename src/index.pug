include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.hero
          .container
            header.header
              .header__logo
                h1.logo AT
              .header__btns
                nav.menu
                  - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]

                  ul.menu__list
                    each item in items 
                      li.menu__item
                        a.menu__link #{item}
              .header__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="#").socials__link
                        +icon(item, "socials__icon")
            .hero__content
              .user-data
                .user-data__desc Личный сайт веб разработчика
                h1.user-data__name Ткачёв Александр
            
            a(href="#").hero__bottom-btn 
              .scroll-down-btn Скролл
              +icon("scroll", "scroll__icons")

        section.about-section
          .container
            .about
              .about__left
                .user-info
                  .user-info__avatar
                    .avatar
                      +image("content/user.jpg", "avatar__img")
                  .user-info__content
                    -
                      var userdata = [
                        ["Проживаю:", "Москва"],
                        ["Возраст:", "23 года"],
                        ["Родился:", "7 апреля 1997"]
                      ];
                    table.user-info__data
                      tbody.user-info__data-body
                        each row in userdata
                          tr
                            td.profile__info-one #{row[0]}
                            td.profile__info-two #{row[1]}
              .about__right
                .about__disclamer Привет, меня зовут
                h2.about__title Александр Ткачёв
                .about__desc
                  p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                  +icon("snowflake", "snowflake")
        section.values-section
          section.triangles.values-section__triangles
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
              polygon(points="0,0 0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
              polygon(points="1000,0 1000,100 0,100")
          section.skills__container
            .container
              .skills__content  
                .backpack
                  +image("content/backpack.png", "backpack__img")
                .values__section__title
                  .values-section__title-content
                    .longtitle
                      h2.longtitle__txt Чем я могу быть полезен вам
                      .longtitle__desc
                        p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                  .values-section__content
                    -
                      var items = [
                        ["Front-end", ["HTML5", "CSS3", "Javascript", "Jquery и Vue.js"]],
                        ["Workflow", ["GIT", "Terminal", "Gulp", "Webpack"]],
                      ];

                    ul.skills__list
                      each row in items 
                        li.skills-list__item.skills-row
                          .skills-row__title #{row[0]}
                          ul.skills-row__list
                            each cell in row[1]
                              li.skills-row__item
                                .skill
                                  svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__circle
                                    defs.defs
                                      linearGradient(x1="0%" y1="50%" x2="100%" y="100%")#skill__gradient
                                        stop(offset="0%" stop-color="#7b00e9")
                                        stop(offset="100%" stop-color="#4a00ed")
                                    circle( r="67" cx="100" cy="100").skill__circle.skill__circle--under
                                    circle( r="67" cx="100" cy="100" stroke="url(#skill__gradient)").skill__circle.skill__circle--above
                                  .skill__title= cell
        section.my__works
          .container
            h2.my__works__title Мои работы
            .my__works__container
              .my__works-left
                h1.number__covers 3
                .container__covers
                  .big__cover
                    +image("content/big__cover.png", "big-cover__img")
                    .little__covers
                      -var covers = ["content/cover.png", "content/cover2.png", "content/cover4.png"]
                      ul.little__covers-list
                        each cover in covers
                          li.little__cover
                            a(href="#").link__site
                              +image(cover, "cover__img")
                    .switch
                      a(href="#").switch__down
                        +icon("arrow-down", "arrow__top")
                      a(href="#").switch__up
                        +icon("arrow-down", "arrow__bottom")
              .my__works-right
                .technologies 
                  -var features = ["HTML", "CSS", "javascript"];
                  ul.technologies__list
                    each item in features 
                      li.features__block
                        .features__txt #{item}
                h2.site__title Сайт школы образования 
                p.site__content Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                a(href="#").link__site
                  +icon("link", "link")
                  p.look Посмотреть сайт
          section.triangles.my__works__triangles
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
              polygon(points="0,0 0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
              polygon(points="1000,0 1000,100 0,100")
        section.reviews
          .container
            .reviews__title__container
              h2.reviews__title Что обо мне говорят
              .reviews__switch
                a(href="#").reviews__switch-left
                  +icon("arrow-down", "arrow__right") 
                a(href="#").reviews__switch-right
                  +icon("arrow-down", "arrow__left") 
            .reviews__container
              .quote__block
                +icon("quote", "quote")
              .reviews__one
                .reviews__txt
                  p Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей! 
                .reviews__info
                  .avatar.avatar__reviews
                        +image("content/user.jpg", "avatar__img")
                  .reviews__user__info
                    .reviews__name Ковальчук Дмитрий
                    .reviews__position Основатель Loftschool
              .quote__block
                +icon("quote", "quote")
              .reviews__two
                .reviews__txt
                  p Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах 
                .reviews__info
                  .avatar.avatar__reviews
                        +image("content/user.jpg", "avatar__img")
                  .reviews__user__info
                    .reviews__name Владимир Сабанцев
                    .reviews__position Преподаватель
        section.feedback
          .container
            h2.feedback__title Связаться со мной
            form(action="#" autocomlete="on").form
              .first__line
                .name__block
                  .name__form Введите ваше имя
                  .user_block
                    +icon("user", "user")
                    input(type="txt").input__txt
                  .line
                .email__block
                  .email Введите ваш email
                  .email__container
                    +icon("envelope", "envelope")
                    input(type="email").input__email
                  .line
              .massege Сообщение к письму
              .coment__block
                +icon("message", "message")
                textarea(name="").coment Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса
              .line
              button(type="submit").send Отправить
        section.footer
          footer.footer__block
            .left__footer
              .data__dev &#169 2020
              .dev__info
                .name__dev Ткачёв Александр
                .footer__info__one Личный сайт веб-разработчика
            .right__footer
              nav.menu.menu__footer
                - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]
                ul.menu__list
                  each item in items 
                    li.menu__item
                      a.menu__link #{item}
              .footer__info
                .footer__info__two 
                  .footer__txt 
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool 
                  .footer__links
                    - var icons = ["insta", "vk", "github"];
                    ul.socials
                      each item in icons
                        li.socials__item
                          a(href="#").socials__link.socials__link__footer
                            +icon(item, "socials__icon")
                .footer__info__three
                  p.part_one Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                  p.part_two Martin Golding 

           

              
