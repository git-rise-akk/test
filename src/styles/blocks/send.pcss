.coment__block__send {
    margin: 60px 0 166px;

    .send {
        padding: 34px 120px;
        text-transform: uppercase;
        font-size: 18px;
        color: #ffffff;
        font-weight: bold;
        background-image: linear-gradient(to right, #7b00e9, #4a00ed);
        border-radius: 50px 0px 50px 0px;

        @include phones() {
            padding: 24px 82px;
        }
    }
    
    
    @include tablets() {
        display: flex;
        justify-content: center;
    } 
}

